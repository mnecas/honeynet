version: '3.4'
services:
{% for item in vms|zip(honeypots_ips)|list %}
  honeypot-{{ item.0.name }}:
    image: quay.io/mnecas0/honeypot-base:latest
    environment:
      SERVER: '{{ data_vm_ip }}'
      DEBUG: 1
      TCPDUMP_FILTER: "host {{ item.1 }}"
      TOKEN: "{{ item.0.token }}"
    network_mode: host
{% endfor %}
